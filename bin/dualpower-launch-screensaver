#!/bin/bash
# Taken from https://github.com/basecamp/dualpower/blob/master/bin/omarchy-launch-screensaver

# Exit early if we don't have the tte show
if ! command -v tte &>/dev/null; then
  exit 1
fi

# Exit early if screensave is already running
pgrep -f org.dualpower.screensaver && exit 0

# Allow screensaver to be turned off but also force started
if [[ -f ~/.local/state/dualpower/toggles/screensaver-off ]] && [[ $1 != "force" ]]; then
  exit 1
fi

# Silently quit Walker on overlay
#walker -q

#focused=$(hyprctl monitors -j | jq -r '.[] | select(.focused == true).name')
#terminal=$(xdg-terminal-exec --print-id)
niri msg action spawn -- alacritty --class org.dualpower.screensaver --config-file=/home/jeff/.config/alacritty/screensaver.toml -e bash --login dualpower-cmd-screensaver

#for m in $(hyprctl monitors -j | jq -r '.[] | .name'); do
#  hyprctl dispatch focusmonitor $m
